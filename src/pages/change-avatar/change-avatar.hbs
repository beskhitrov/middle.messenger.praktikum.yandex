<div class="navigation">
    {{> ButtonBack}}
</div>
<div class="settings">
    {{> Avatar}}
    <h1>Иван</h1>
    {{> InputSetting type="text" id="email" label="Почта" value="foo@bar.baz" }}
    {{> InputSetting type="text" id="login" label="Логин" value="foobar" }}
    {{> InputSetting type="text" id="first_name" label="Имя" value="Иван" }}
    {{> InputSetting type="text" id="second_name" label="Фамилия" value="Иванов" }}
    {{> InputSetting type="text" id="display_name" label="Имя в чате" value="Иван" }}
    {{> InputSetting type="text" id="phone" label="Телефон" value="+7 (000) 000-00-00" }}
    <div class="links">
        {{> LinkSetting title="Изменить данные" page="change-profile" className="location" }}
        {{> LinkSetting title="Изменить пароль" page="change-password" className="location" }}
        {{> LinkSetting title="Выйти" page="login" className="logout" }}
    </div>
    {{> Button title="Сохранить" className="button__color"}}
</div>
<div class="modal-background">
    {{> Modal }}
    {{> Modal validation-message="Нужно выбрать файл" }}
    {{> Modal validation-message="Ошибка загрузки. Попробуйте еще раз." }}
    {{> Modal load-completed="true" }}
</div>
